
{
    "name": "go-gopher",
    "version": 2,
    "builds": [
      { "src": "public/**/*", "use": "@now/static" },
      { "src": "api/index.go", "use": "@now/go" },
      { "src": "api/health.go", "use": "@now/go" },
      { "src": "api/gopher.go", "use": "@now/go" }
    ],
    "routes": [
      { "src": "/", "dest": "public/index.html" },
      { "src": "/index", "dest": "api/index.go" },
      { "src": "/health", "dest": "api/health.go" },
      { "src": "/gopher", "dest": "api/gopher.go" }
    ],
    "functions": {
      "api/gopher.go": {
        "includeFiles": "public/gophercolor.png"
      }
    }
}
